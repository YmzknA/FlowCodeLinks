{
  "name": "flowcodelinks",
  "version": "0.1.1",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    
    "quality:check": "node scripts/quality-gate.js",
    "quality:lint": "eslint --config .eslintrc.quality.json src/",
    "quality:lint:fix": "eslint --config .eslintrc.quality.json --fix src/",
    "quality:type": "tsc --noEmit --project tsconfig.quality.json",
    "quality:monitor": "node scripts/quality-monitor.js",
    "quality:monitor:start": "node scripts/quality-monitor.js start",
    "quality:monitor:stop": "node scripts/quality-monitor.js stop",
    "quality:monitor:status": "node scripts/quality-monitor.js status",
    "quality:full": "npm run quality:type && npm run quality:lint && npm run test:coverage && npm run quality:check",
    
    "precommit": "npm run quality:check",
    "prepush": "npm run quality:full"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.1.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@types/dompurify": "^3.0.5",
    "@typescript-eslint/types": "^8.35.1",
    "@typescript-eslint/typescript-estree": "^8.35.1",
    "daisyui": "^5.0.46",
    "dompurify": "^3.2.6",
    "next": "^14.2.30",
    "prismjs": "^1.30.0",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "tailwindcss": "^3.4.17"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.19.4",
    "@types/prismjs": "^1.26.3",
    "@types/react": "18.3.23",
    "@types/react-dom": "^18",
    "autoprefixer": "^10.4.21",
    "eslint": "^8",
    "eslint-config-next": "14.0.4",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.5.6",
    "ts-node": "^10.9.2",
    "typescript": "^5"
  }
}
